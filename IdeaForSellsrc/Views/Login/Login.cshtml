@using IdeaForSellsrc.Models.ViewModel.ViewModel;
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Oleksandr Lysenko">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>@Model.ListOfLiterals["Tittle"]</title>

    <!-- Bootstrap core CSS -->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/css/style-responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page" >
        <div class="container"  style= "background-image: url('~/assets/img/login-bg.jpg');">

            <form class="form-login" action="index.html">
                <h2 class="form-login-heading">@Model.ListOfLiterals["SignInNow"]</h2>
                <div class="login-wrap">
                    <input type="text" class="form-control" placeholder="@Model.ListOfLiterals["UserID"]" autofocus>
                    <br>
                    <input type="password" class="form-control" placeholder="@Model.ListOfLiterals["Password"]">
                    <label class="checkbox">
                        <span class="pull-right">
                            <a data-toggle="modal" href="login.html#myModal"> @Model.ListOfLiterals["ForgotPassword"]</a>

                        </span>
                    </label>
                    <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> @Model.ListOfLiterals["SingInButton"]</button>
                    <hr>

                    <div class="login-social-link centered">
                        <p>@Model.ListOfLiterals["SinInAsSocialNetwork"]</p>
                        <button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook</button>
                        <button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter</button>
                    </div>
                    <div class="registration">
                        @Model.ListOfLiterals["HaveAnAccount"]<br />
                        <a class="" href="@Url.Action("Registration", "Registration")">
                            @Model.ListOfLiterals["CreateAnAccount"]
                        </a>
                    </div>

                </div>

                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">@Model.ListOfLiterals["ForgotPassword"]</h4>
                            </div>
                            <div class="modal-body">
                                <p>@Model.ListOfLiterals["EnterYourEmail"]</p>
                                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">@Model.ListOfLiterals["CancelButton"]</button>
                                <button class="btn btn-theme" type="button">@Model.ListOfLiterals["SubmitButton"]</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- modal -->

            </form>

        </div>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/assets/js/jquery.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
</body>
</html>

